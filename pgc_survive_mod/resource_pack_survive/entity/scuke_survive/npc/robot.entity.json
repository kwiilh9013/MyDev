{
    "format_version": "1.10.0",
    "minecraft:client_entity": {
        "description": {
            "identifier": "scuke_survive:npc_robot",
            "materials": {
                "default": "villager_v2"
            },
            "textures": {
                "default": "textures/entity/scuke_survive/npc/robot"
            },
            "geometry": {
                "default": "geometry.scuke_survive_npc_robot"
            },
            "render_controllers": [
                "controller.render.default"
            ],
            "spawn_egg": {
                "base_color":"#434040",
                "overlay_color":"#968232"
            },
            "animations": {
                "walk": "animation.scuke_survive.robot.walk",
                "ui_correct": "animation.scuke_survive.robot.ui_correct"
            },
            "scripts": {
                "pre_animation": [
                    "variable.not_in_ui = 1.0;",
                    "variable.correct_pos = 0.0;"
                ],
                "animate":[
                    {
                        "walk" : "query.modified_move_speed > 0.01"
                    },
                    {
                        "ui_correct": "variable.correct_pos == 1.0"
                    },
                    {
                        "walk": "variable.correct_pos == 1.0"
                    }
                ]
            }
        }
    }
}