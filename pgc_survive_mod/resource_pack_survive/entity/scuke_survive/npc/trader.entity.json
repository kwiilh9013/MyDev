{
    "format_version": "1.10.0",
    "minecraft:client_entity": {
        "description": {
            "identifier": "scuke_survive:npc_trader",
            "materials": {
                "default": "villager_v2"
            },
            "textures": {
                "default": "textures/entity/scuke_survive/npc/trader"
            },
            "geometry": {
                "default": "geometry.scuke_survive_npc_trader"
            },
            "render_controllers": [
                "controller.render.default"
            ],
            "spawn_egg": {
                "base_color":"#E2E4E8",
                "overlay_color":"#C88A1F"
            },
            "animations": {
                "general": "animation.villager.general",
                "look_at_target": "animation.common.look_at_target",
                "move": "animation.villager.move",
                "ui_correct": "animation.scuke_survive_npc.ui_correct"
            },
            "scripts": {
                "pre_animation": [
                    "variable.num_professions = 15;",
                    "variable.num_tiers = 3;",
                    "variable.profession_index = (query.variant < variable.num_professions ? query.variant : 0);",
                    "variable.level_index = query.trade_tier;",
                    "variable.not_in_ui = 1.0;",
                    "variable.correct_pos = 0.0;"
                ],
                "animate":[
                    {"move" : "query.modified_move_speed"},
                    "general",
                    {
                        "look_at_target": "variable.not_in_ui"
                    },
                    {
                        "ui_correct": "variable.correct_pos == 1.0"
                    }
                ]
            }
        }
    }
}