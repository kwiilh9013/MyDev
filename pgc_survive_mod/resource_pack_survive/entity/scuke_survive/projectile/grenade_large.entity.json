{
    "format_version": "1.10.0",
    "minecraft:client_entity": {
        "description": {
            "identifier": "scuke_survive:items_grenade_large_entity",
            "materials": {
                "default": "arrow"
            },
            "textures": {
                "default": "textures/entity/scuke_survive/projectile/grenade_03"
            },
            "geometry": {
                "default": "geometry.scuke_survive_grenade"
            },
            "render_controllers": [
                "controller.render.default"
            ],
            "spawn_egg": {
                "base_color":"#DF7E34",
                "overlay_color":"#72342A"
            },
            "animations": {
                "move": "animation.arrow.move",
                "rotate": "animation.scuke_survive.projectile_grenade.rotate",
                "ui_correct":"animation.scuke_survive_grenade.scale_correct"
            },
            "scripts": {
                "pre_animation": [
                    "variable.shake = query.shake_time - query.frame_alpha;",
                    "variable.shake_power = variable.shake > 0.0 ? -Math.sin(variable.shake * 200.0) * variable.shake : 0.0;",
                    "variable.correct_pos = 0.0;"
                ],
                "animate": [
                    {"move":"variable.correct_pos != 1.0"},
                    {"rotate": "variable.correct_pos != 1.0 && !query.is_on_ground && !query.is_in_water"},
                    {"ui_correct":"variable.correct_pos == 1.0"}
                ]
            },
            "sound_effects": {
                "grenada_throw_prepare":"scuke_survive.items.grenada_throw_prepare"
            }
        }
    }
}